                    "Khách hàng - Tài khoản"
                ],
                "summary": "Đăng ký tài khoản",
                "operationId": "e333802e95717fb33dfc14ab9d1b4307",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "hoten",
                                    "email",
                                    "password",
                                    "password_confirmation",
                                    "sdt"
                                ],
                                "properties": {
                                    "hoten": {
                                        "type": "string",
                                        "example": "Nguyễn Văn A"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "khach@gmail.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "123456"
                                    },
                                    "password_confirmation": {
                                        "type": "string",
                                        "example": "123456"
                                    },
                                    "sdt": {
                                        "type": "string",
                                        "example": "0909123456"
                                    },
                                    "diachi": {
                                        "type": "string",
                                        "example": "TP.HCM"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Đăng ký thành công"
